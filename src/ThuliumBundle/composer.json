{
    "name":        "thuliumbundle",
    "type":        "symfony-bundle",
    "homepage":    "http://github.com/muszkin/ThuliumBundle",
    "license":     "MIT",
    "description": "Bundle for Thulium REST API",
    "keywords":    [
        "thulium",
        "dreamcommerce",
        "rest",
        "restapi",
        "callcenter",
        "thulium",
        "api",
        "muszkin",
        "piotr",
        "mucha"
    ],

    "authors": [
        {
            "name": "Piotr Mucha",
            "email": "piotr.mucha@dreamcommerce.com"
        }
    ],

    "require": {
        "php":                          "^5.5|^7.0",
        "symfony/framework-bundle":     "^2.3|^3.0",
        "symfony/security-bundle":      "^2.3|^3.0",
        "symfony/options-resolver":     "^2.3|^3.0",
        "symfony/form":                 "^2.3|^3.0",
        "symfony/yaml":                 "^2.3|^3.0",
        "symfony/templating":           "^2.7|^3.0",
        "guzzlehttp/guzzle":              "^5.0"
    },

    "conflict": {
        "twig/twig":                    "<1.12"
    },

    "require-dev": {
        "doctrine/orm":                 "^2.3",
        "symfony/property-access":      "^2.3|^3.0",
        "symfony/validator":            "^2.3|^3.0",
        "symfony/twig-bundle":          "^2.3|^3.0",
        "symfony/stopwatch":            "^2.5|^3.0",
    },

    "autoload": {
        "psr-4": {
            "ThuliumBundle\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },

    "minimum-stability": "dev",
    "prefer-stable": true
}
